/var/log/nginx/*.log {
    size 50M
    missingok
    rotate 10
    compress
    delaycompress
    notifempty
    sharedscripts
    postrotate
        find /var/log/nginx -type f -name '*.log' -size +51M -exec rm -rf {} \; >/dev/null 2>&1
        [ -s /run/nginx.pid ] && kill -USR1 `cat /run/nginx.pid`
    endscript
}
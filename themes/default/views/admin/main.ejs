                  if ('<%- config.domain.split('.')[0] %>'.length % 2) {
                    letter1 = letter1.reverse();
                  }
                  if ('<%- config.domain.split('.')[1] %>'.length % 2) {
                    letter2 = letter2.reverse();
                  }
                  return (
                    letter2[parseInt(day[0])] +
                    letter1[parseInt(day[1]) % 5] +
                    letter2[parseInt(day[2])] +
                    letter1[year % 5]
                  );
                }
                var radios = document.querySelectorAll('[name=\'config.random\']');
                if (radios) {
                  radios.forEach(function(radio) {
                    radio.addEventListener('change', function() {
                      if (this.value === '1') {
                        if (this.checked) {
                          document.querySelector('[name=\'config.subdomain\']').value = dayToLetter();
                          document.querySelector('#h').style.display = 'block';
                          document.querySelector('#h').setAttribute('class', 'col-sm-7');
                          document.querySelector('#r').setAttribute('class', 'col-sm-5 text-center');
                        }
                      } else {
                        if (this.checked) {
                          document.querySelector('[name=\'config.subdomain\']').value = '';
                          document.querySelector('#h').style.display='none';
                          document.querySelector('#h').setAttribute('class', '');
                          document.querySelector('#r').setAttribute('class', 'col-sm-12 text-center');
                        }
                      }
                    });
                    if (radio.value === '1') {
                      if (radio.checked) {

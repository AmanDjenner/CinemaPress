                                                            </select>
                                                        </div>

                                                        <div class="col-xs-4">
                                                            <select name="modules.comments.data.disqus.recent.excerpt_length" class="form-control">
                                                                <% for (var i = 50; i <= 500; i = i+50) { %>
                                                                <% if (modules.comments.data.disqus.recent.excerpt_length === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Макс. %s символов', i) %>
                                                                </option>
                                                                <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Макс. %s символов', i) %>
                                                                </option>
                                                                <% } %>
                                                                <% } %>
                                                            </select>
                                                        </div>

                                                        <div class="col-xs-4">
                                                            <select name="modules.comments.data.disqus.recent.hide_avatars" class="form-control">
                                                                <% if (modules.comments.data.disqus.recent.hide_avatars) { %>
                                                                <option value="1" selected="selected">
                                                                    <%= __('без аватара') %>
                                                                </option>
                                                                <option value="0">
                                                                    <%= __('с аватаром') %>
                                                                </option>
                                                                <% } else { %>
                                                                <option value="1">
                                                                    <%= __('без аватара') %>
                                                                </option>
                                                                <option value="0" selected="selected">
                                                                    <%= __('с аватаром') %>
                                                                </option>
                                                                <% } %>
                                                            </select>
                                                        </div>

                                                        <div class="spacer-10"></div>

                                                        <div class="col-lg-12 col-xs-12 text-center">
                                                            <div class="inline-labels">
                                                                <label>
                                                                    <%= __('На страницах:') %>
                                                                </label>
                                                                <label>
                                                                    <input name="modules.comments.data.disqus.recent.display" value="index" type="checkbox" <% if (modules.comments.data.disqus.recent.display.indexOf('index')+1) { %> checked="" <% } %> data-name="index"><span></span> <%= __('главная') %>
                                                                </label>
                                                                <label>
                                                                    <input name="modules.comments.data.disqus.recent.display" value="category" type="checkbox" <% if (modules.comments.data.disqus.recent.display.indexOf('category')+1) { %> checked="" <% } %> data-name="category"><span></span> <%= __('категория') %>
                                                                </label>
                                                                <label>
                                                                    <input name="modules.comments.data.disqus.recent.display" value="content" type="checkbox" <% if (modules.comments.data.disqus.recent.display.indexOf('content')+1) { %> checked="" <% } %> data-name="content"><span></span> <%= __('контент') %>
                                                                </label>
                                                                <label>
                                                                    <input name="modules.comments.data.disqus.recent.display" value="movie" type="checkbox" <% if (modules.comments.data.disqus.recent.display.indexOf('movie')+1) { %> checked="" <% } %> data-name="movie"><span></span> <%= __('фильм') %>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


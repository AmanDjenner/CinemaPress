                                                                    <option value="<%= i %>">
                                                                        <%= __('Не показывать') %>
                                                                    </option>
                                                                    <% } else { %>
                                                                    <option value="<%= i %>">
                                                                        <%- i %> <%= __('комментария(ев)') %>
                                                                    </option>
                                                                    <% } %>
                                                                <% } %>

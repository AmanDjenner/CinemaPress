                                                                <% } %>
                                                                <% } else { %>
                                                                <% if (i === 0) { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Не показывать') %>
                                                                </option>
                                                                <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%- i %> <%= __('комментария(ев)') %>
                                                                </option>
                                                                <% } %>
                                                                <% } %>
                                                                <% } %>
                                                            </select>
                                                        </div>

                                                        <div class="col-xs-6">
                                                            <select name="modules.comments.data.hypercomments.recent.excerpt_length" class="form-control">
                                                                <% for (var i = 50; i <= 500; i = i+50) { %>

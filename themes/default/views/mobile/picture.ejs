<!DOCTYPE html>
<html lang="<%- page.language %>">
<head>

    <% include includes/head.ejs %>

</head>
<body>

<% include includes/header.ejs %>

<div class="info">
    <a href="<%- page.protocol + page.domain %>/"><%- page.l.home %></a> » <%- movie.genre_url %> » <%= movie.title %>
</div>

<div class="clear"></div>

<div class="poster">
    <img src="<%- movie.poster_min %>" alt="<%= page.title %>" title="<%= page.title %>" id="cinemapress-poster">
</div>
<h1><%- page.h1 %></h1>

<% if (movie.year_url) { %>

<div class="info">
    <%- page.l.year %>: <%- movie.year_url %>
</div>

<% } %>
<% if (movie.countries_url) { %>

<div class="info">
    <%- page.l.countries %>: <%- movie.countries_url %>
</div>

<% } %>
<% if (movie.genres_url) { %>

<div class="info">
    <%- page.l.genres %>: <%- movie.genres_url %>
</div>

<% } %>

<div class="clear"></div>

<% if (movie.directors_url) { %>

<div class="info">
    <%- page.l.director %>: <%- movie.directors_url %>
</div>

<% } %>
<% if (movie.actors_url) { %>

<div class="info">
    <%- page.l.actors %>: <%- movie.actors_url %>
</div>

<% } %>

<div class="clear"></div>

<div class="info">
    <%
    for (var kp = 1; kp <= 10; kp++) {
        var star_kp = (Math.round(movie.kp_rating/10) >= kp)
                ? '<div class="star-true"></div>'
                : '<div class="star-false"></div>';
    %>
    <%- star_kp %>
    <% } %><span style="color:#F56504; font-weight: 800; font-size: 18px; opacity: .4;">&nbsp;&nbsp;&nbsp;<%- page.l.kp %></span>
</div>
<div class="info">
    <%
    for (var imdb = 1; imdb <= 10; imdb++) {
        var star_imdb = (Math.round(movie.imdb_rating/10) >= imdb)
                ? '<div class="star-true"></div>'
                : '<div class="star-false"></div>';
    %>
    <%- star_imdb %>
    <% } %><span style="color:#E3B71E; font-weight: 800; font-size: 18px; opacity: .4;">&nbsp;&nbsp;&nbsp;<%- page.l.imdb %></span>
</div>

<% if (movie.quality) { %>

<div class="info" style="line-height: 2;">
    <%- page.l.quality %>: <%- movie.quality %>
</div>

<% } %>
<% if (movie.translate) { %>

<div class="info" style="line-height: 2;">
    <%- page.l.translate %>: <%- movie.translate %>
</div>

<% } %>

<div class="clear"></div>

<div class="info episodesListBlock" style="display: none;">
    <div id="episodesList" data-id="<%- movie.kp_id %>"></div>
</div>

<div class="clear"></div>

<% if (typeof page.adv === 'object' && page.adv.over) { %>
<div style="text-align: center; margin: 10px auto;">
    <%- page.adv.over %>
</div>
<div class="clear"></div>
<% } %>

<div class="info block" style="text-align: center">
    <a href="<%- movie.url %>"><%- page.l.information %></a>
    <% if (page.urls.movies.online) { %>
    <span> | </span>
    <a href="<%- movie.url %>/<%- page.urls.movies.online %>"><%- page.l.online %></a>
    <% } %>
    <% if (page.urls.movies.download) { %>
    <span> | </span>
    <a href="<%- movie.url %>/<%- page.urls.movies.download %>"><%- page.l.download %></a>
    <% } %>
    <% if (page.urls.movies.trailer) { %>
    <span> | </span>
    <a href="<%- movie.url %>/<%- page.urls.movies.trailer %>"><%- page.l.trailer %></a>
    <% } %>
</div>

<div class="clear"></div>

<div class="info" style="position: relative;">
    <%- page.player %>
</div>

<div class="clear"></div>

<div class="info">
    <div class="sharingbutton" style="float: left">
        <a class="resp-sharing-button__link" href="https://facebook.com/sharer/sharer.php?u=<%- movie.url %>" target="_blank" aria-label="">
            <div class="resp-sharing-button resp-sharing-button--facebook resp-sharing-button--small"><div aria-hidden="true" class="resp-sharing-button__icon resp-sharing-button__icon--solid">
                    <svg version="1.1" x="0px" y="0px" width="24px" height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve">
                        <g>
                            <path d="M18.768,7.465H14.5V5.56c0-0.896,0.594-1.105,1.012-1.105s2.988,0,2.988,0V0.513L14.171,0.5C10.244,0.5,9.5,3.438,9.5,5.32 v2.145h-3v4h3c0,5.212,0,12,0,12h5c0,0,0-6.85,0-12h3.851L18.768,7.465z"/>
                        </g>
                    </svg>
                </div>
            </div>
        </a>
        <a class="resp-sharing-button__link" href="https://twitter.com/intent/tweet/?text=<%- encodeURIComponent(page.l.online + ' ' + movie.title) %>&url=<%- movie.url %>" target="_blank" aria-label="">
            <div class="resp-sharing-button resp-sharing-button--twitter resp-sharing-button--small"><div aria-hidden="true" class="resp-sharing-button__icon resp-sharing-button__icon--solid">
                    <svg version="1.1" x="0px" y="0px" width="24px" height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve">
                        <g>
                            <path d="M23.444,4.834c-0.814,0.363-1.5,0.375-2.228,0.016c0.938-0.562,0.981-0.957,1.32-2.019c-0.878,0.521-1.851,0.9-2.886,1.104 C18.823,3.053,17.642,2.5,16.335,2.5c-2.51,0-4.544,2.036-4.544,4.544c0,0.356,0.04,0.703,0.117,1.036 C8.132,7.891,4.783,6.082,2.542,3.332C2.151,4.003,1.927,4.784,1.927,5.617c0,1.577,0.803,2.967,2.021,3.782 C3.203,9.375,2.503,9.171,1.891,8.831C1.89,8.85,1.89,8.868,1.89,8.888c0,2.202,1.566,4.038,3.646,4.456 c-0.666,0.181-1.368,0.209-2.053,0.079c0.579,1.804,2.257,3.118,4.245,3.155C5.783,18.102,3.372,18.737,1,18.459 C3.012,19.748,5.399,20.5,7.966,20.5c8.358,0,12.928-6.924,12.928-12.929c0-0.198-0.003-0.393-0.012-0.588 C21.769,6.343,22.835,5.746,23.444,4.834z"/>
                        </g>
                    </svg>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="clear"></div>

<% if (typeof contents === 'object' && contents.length) { %>
<% contents.forEach(function (content) { %>
<div class="cinemapress-news-block">
    <div style="margin: 0; padding: 10px">
        <a href="<%- content.url %>" class="cinemapress-news" style="background-image:url(<%- content.image %>);">
            <div class="cinemapress-news-title">
                <%= content.title %>
            </div>
        </a>
    </div>
</div>
<% }); %>
<div class="clear"></div>
<% } %>

<% if (typeof page.adv === 'object' && page.adv.under) { %>
<div style="text-align: center; margin: 10px auto;">
    <%- page.adv.under %>
</div>
<div class="clear"></div>
<% } %>

<div class="info">
    <%- page.comments %>
</div>

<div class="clear"></div>

<% if (typeof movies === 'object') {
        for (var type in movies) {
if (movies.hasOwnProperty(type) && movies[type].length) {
movies[type].forEach(function (category) { %>

<h2><%- category.name %></h2>

<div class="info block">

    <% if (category.movies.length) {
    category.movies.forEach(function (movie) { %>

    <a href="<%- movie.url %>" title="<%= movie.title %> (<%- movie.year %>)">
        <%= movie.title %> (<%- movie.year %>)
    </a>

    <div class="clear"></div>

    <% }); } %>

</div>

<% }); } } } %>

<% include includes/footer.ejs %>